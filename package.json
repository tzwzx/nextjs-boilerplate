{
  "name": "nextjs-boilerplate",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "lint": "oxfmt --check . && oxlint .",
    "format": "oxfmt --write . && oxlint --fix .",
    "prettier": "prettier --check .",
    "prettier:fix": "prettier --write .",
    "stylelint": "stylelint 'src/**/*.scss'",
    "stylelint:fix": "stylelint 'src/**/*.scss' --fix",
    "tsc": "tsgo --noEmit",
    "package-format": "syncpack format",
    "package-lint-semver-ranges": "syncpack lint",
    "knip": "knip",
    "test:unit": "bun test tests/unit",
    "test:e2e": "playwright test",
    "test:e2e:ui": "playwright test --ui",
    "check-all": "bun scripts/check-all.ts",
    "check-all:fix": "bun scripts/check-all.ts fix",
    "postinstall": "lefthook install"
  },
  "dependencies": {
    "next": "16.1.6",
    "react": "19.2.4",
    "react-dom": "19.2.4"
  },
  "devDependencies": {
    "@happy-dom/global-registrator": "20.7.0",
    "@playwright/test": "1.58.2",
    "@testing-library/react": "16.3.2",
    "@types/bun": "1.3.9",
    "@types/node": "25.3.0",
    "@types/react": "19.2.14",
    "@types/react-dom": "19.2.3",
    "@typescript/native-preview": "7.0.0-dev.20260223.1",
    "babel-plugin-react-compiler": "1.0.0",
    "concurrently": "9.2.1",
    "knip": "5.85.0",
    "lefthook": "2.1.1",
    "oxfmt": "0.35.0",
    "oxlint": "1.50.0",
    "prettier": "3.8.1",
    "sass": "1.97.3",
    "stylelint": "17.3.0",
    "stylelint-config-recess-order": "7.6.1",
    "stylelint-config-recommended-scss": "17.0.0",
    "stylelint-prettier": "5.0.3",
    "syncpack": "14.0.0",
    "typescript": "5.9.3",
    "ultracite": "7.2.3",
    "yaml": "2.8.2"
  },
  "engines": {
    "node": "24.x",
    "bun": "1.x"
  }
}
